<resources>
    <!-- Base application theme. -->
    <style name="Theme.FoodRecipes" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="custom_chip_style" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="backgroundColor">@color/chip_background_color</item>
        <item name="checkedIconTint">@color/chip_text_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
    </style>

    <style name="DetailsToolBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="custom_tab_layout" parent="Widget.Design.TabLayout">
        <item name="background">@color/actionBarBackgroundColor</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>

    <style name="custom_tab_text" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>